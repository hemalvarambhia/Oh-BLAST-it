<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bioinformaticsapp"
    android:versionCode="3"
    android:versionName="2.1" >

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:icon="@drawable/ic_dna"
        android:label="@string/app_name" >
        <activity
            android:name=".OhBLASTItAppHomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EMBLEBISetUpQueryActivity" android:label="@string/blastqueryentry_screen_title" android:screenOrientation="portrait"></activity>
        <provider android:name=".persistence.BLASTQueryProvider" android:authorities="com.bioinformaticsapp"></provider>
        <service android:name="SubmitQueryService"></service>
        <service android:name="com.bioinformaticsapp.blastservices.PollQueryService"></service>
        <activity android:name=".ViewTaxonomyActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".DraftBLASTQueriesActivity"></activity>
        <activity android:name="AppPreferences"></activity>
        <receiver android:name=".NetworkConnectivityListener">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE">
                    
                </action>
            </intent-filter>
        </receiver>
        <activity android:name=".FinishedQueriesActivity"></activity>
        <activity android:name=".ViewBLASTHitsActivity"></activity>
        <activity android:screenOrientation="portrait" android:name=".PendingQueriesActivity"></activity>
        <receiver android:name=".QueryStatusRefreshReceiver">
            <intent-filter >
                <action android:name="com.bioinformaticsapp.ACTION_QUERY_STATUS_REFRESH">
                    
                </action>
            </intent-filter>
        </receiver>
        <activity android:name="NCBIQuerySetUpActivity"></activity>
        <receiver android:name=".BLASTQueriesFinishedReceiver">
            <intent-filter >
                <action android:name="com.bioinformaticsapp.QUERIES_FINISHED_ACTION">
                    
                </action>
            </intent-filter>
        </receiver>
        <activity android:name=".BLASTQuerySearchParametersActivity" android:theme="@android:style/Theme.Dialog"></activity>
    </application>

</manifest>