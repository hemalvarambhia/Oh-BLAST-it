<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp" >

   <TextView
        android:id="@+id/dialog_program_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/blastqueryentry_program_label" />
    <TextView
        android:id="@+id/query_program_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_program_label"
        android:text="@string/app_name" />
	
	<TextView
        android:id="@+id/dialog_database_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/query_program_text_view"
        android:layout_marginTop="20dp"
        android:text="@string/blastqueryentry_database_spinner_label" />
	<TextView
        android:id="@+id/query_database_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_database_label"
        android:text="@string/app_name" />
</RelativeLayout>